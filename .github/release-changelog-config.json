{
  "categories": [
    { "title": "## ğŸš€ Features", "labels": ["feature", "enhancement"] },
    { "title": "## ğŸ› Fixes", "labels": ["fix", "bug"] },
    { "title": "## ğŸ“š Docs", "labels": ["docs"] },
    { "title": "## ğŸ§° Maintenance", "labels": ["chore", "ci", "refactor", "infra"] },
    { "title": "## ğŸ”’ Security", "labels": ["security"] }
  ],
  "ignore_labels": ["skip-changelog"],
  "sort": { "order": "DESC", "on_property": "mergedAt" },
  "template": "# Release notes for #{{TO_TAG}} (since #{{FROM_TAG}})\n\n#{{CHANGELOG}}\n\n**Contributors:** {{CONTRIBUTORS}}\n\n**Assets:** Download the latest build for your platform from the **Assets** section below.",
  "fetchContributors": true,
  "label_extractor": [
    { "pattern": "\\[(feat|feature)\\]", "target": "feature", "on_property": "title", "flags": "iu" },
    { "pattern": "\\[(fix)\\]", "target": "fix", "on_property": "title", "flags": "iu" },
    { "pattern": "\\[(docs)\\]", "target": "docs", "on_property": "title", "flags": "iu" },
    { "pattern": "\\[(chore)\\]", "target": "chore", "on_property": "title", "flags": "iu" },
    { "pattern": "\\[(security)\\]", "target": "security", "on_property": "title", "flags": "iu" }
  ],
  "pr_template": "- #{{TITLE}} (#{{URL}}) â€” @#{{AUTHOR}}",
  "empty_template": "- no changes",
  "fetchReleaseInformation": true,
  "fetchReviewers": false,
  "fetchReviews": false,
  "fetchViaCommits": false,
  "max_pull_requests": 500
}
